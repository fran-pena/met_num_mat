{
  "version": "0.2.0",
  "configurations": [
    {
      "name":            "debug",
      "type":            "cppdbg",
      "request":         "launch",
      "program":         "${workspaceFolder}/a.exe",
      "cwd":             "${workspaceFolder}",
      "MIMode":          "gdb",
      "preLaunchTask":   "compile",
      "stopAtEntry":     false,
      "externalConsole": false,
      "setupCommands": [{
          "description": "Enable pretty-printing for gdb",
          "text":        "-enable-pretty-printing",
          "ignoreFailures": true
      }]
    }
  ]
}